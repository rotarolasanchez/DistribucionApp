<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblordendespacho"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:textAlignment="center"
                android:layout_marginRight="1dp"
                >

            </TextView>
                <!--android:layout_marginLeft="1dp"-->

                />

            <TextView
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/lblcodigo"
                android:layout_marginLeft="1dp"
                />

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/lbldesc"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"

                />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/lblfactura"
                android:layout_marginLeft="1dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/lblestado"
                android:layout_marginLeft="1dp" />
            <!--<TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/lblcoordenada"
                android:layout_marginLeft="1dp" />-->
            <CheckBox
                android:id="@+id/chkbox"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:enabled="false"
                android:focusable="false"
                android:layout_marginLeft="1dp"
                />

            <ImageButton
                android:id="@+id/btnactualizaestadodespacho"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton"
                android:layout_toRightOf="@+id/imageButton"
                app:srcCompat="@mipmap/buscar" />
            <ImageButton
                android:id="@+id/btnconsultamapacliente"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scrollView9"
                android:layout_toEndOf="@+id/scrollView9"
                android:layout_toRightOf="@+id/scrollView9"
                app:srcCompat="@mipmap/buscar_direccion" />
        </TableRow>

    </TableLayout>
</RelativeLayout>