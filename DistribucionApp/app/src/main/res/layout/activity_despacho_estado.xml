<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shopper.distribucionapp.View.DespachoEstadoView">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/chkbox1"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:text="Entregado"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/chkbox2"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Anulado" />



            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/chkbox3"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_column="0"
                    android:text="Pendiente"
                    android:textAlignment="center" />

                <CheckBox
                    android:id="@+id/chkbox4"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Re-programado" />


            </TableRow>


        </TableLayout>



    </ScrollView>

</RelativeLayout>
